<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:vm="clr-namespace:DailyHealthLog.ViewModels"
                    xmlns:vw="clr-namespace:DailyHealthLog.Views">
    <DataTemplate DataType="{x:Type vm:MainViewModel}">
        <vw:MainView />
    </DataTemplate>

    <DataTemplate DataType="{x:Type vm:AddDailyLogViewModel}">
        <vw:AddDailyLogView />
    </DataTemplate>

    <DataTemplate DataType="{x:Type vm:EditDailyLogViewModel}">
        <vw:EditDailyLogView />
    </DataTemplate>

    <DataTemplate DataType="{x:Type vm:Report2ViewModel}">
        <vw:Report2View />
    </DataTemplate>

    <DataTemplate DataType="{x:Type vm:DetailLogViewModel}">
        <vw:DetailLogView />
    </DataTemplate>
    
    <DataTemplate x:Key="WorkspacesTemplate">
        <ItemsControl ItemsSource="{Binding}" />
    </DataTemplate>
</ResourceDictionary>